{% for shipmentMethod in shipmentMethods %}
    <ul>
        <input type="radio" id="shipment_method_{{ shipmentMethod.idShipmentMethod }}" name="shipment_method" value="{{ shipmentMethod.idShipmentMethod }}" />
        <label for="shipment_method_{{ shipmentMethod.idShipmentMethod }}">{{ shipmentMethod.name }}</label>
    </ul>
{% endfor %}
<script>
    $(function() {
        $('input[name=shipment_method]').change(function () {
            $('#amazonpay_place_order_link').attr('disabled', true);
            $('#amazonpay_summery_information').load(
                '{{ path('amazonpay_update_shipment_method') }}',
                {'shipment_method_id': $(this).val()},
                function() {
                    $('#amazonpay_place_order_link').attr('disabled', false);
                }
            );
        });

        $('input[name=shipment_method]:first').click();
    });
</script>