<?xml version="1.0"?>
<statemachine
        xmlns="spryker:oms-01"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="spryker:oms-01 http://static.spryker.com/oms-01.xsd">

    <process name="AmazonpayPayment01" main="true">
        <states>
            <state name="new" reserved="true"/>

            <state name="auth pending" reserved="true"/>
            <state name="auth open" reserved="true"/>
            <state name="auth closed"/>
            <state name="auth suspended" reserved="true"/>
            <state name="auth declined"/>

            <state name="capture pending" reserved="true"/>
            <state name="capture completed" reserved="true"/>
            <state name="capture declined"/>

            <state name="refund pending"/>
            <state name="refund completed"/>
            <state name="refund declined"/>

            <state name="closed" reserved="true"/>
        </states>

        <events>
            <event name="update order status" onEnter="true" command="Amazonpay/UpdateNewOrderStatus" />
            <event name="update authorization status" manual="true" command="Amazonpay/UpdateAuthorizationStatus" />
            <event name="update capture status" manual="true" command="Amazonpay/UpdateCaptureStatus" />
            <event name="update refund status" manual="true" command="Amazonpay/UpdateRefundStatus" />
            <event name="capture" manual="true" command="Amazonpay/Capture" />
            <event name="update suspended order" command="Amazonpay/UpdateSuspendedOrder" />
            <event name="close" manual="true" command="Amazonpay/CloseOrder" />
            <event name="refund" manual="true" command="Amazonpay/RefundOrder" />
        </events>

        <transitions>
            <!-- from new -->
            <transition condition="Amazonpay/IsAuthPending" happy="true">
                <source>new</source>
                <target>auth pending</target>
                <event>update order status</event>
            </transition>

            <transition condition="Amazonpay/IsAuthOpen" happy="true">
                <source>new</source>
                <target>auth open</target>
                <event>update order status</event>
            </transition>

            <transition condition="Amazonpay/IsCaptureCompleted" happy="true">
                <source>new</source>
                <target>capture completed</target>
                <event>update order status</event>
            </transition>

            <!-- from auth_pending -->
            <transition condition="Amazonpay/IsAuthOpen" happy="true">
                <source>auth pending</source>
                <target>auth open</target>
                <event>update authorization status</event>
            </transition>

            <transition condition="Amazonpay/IsAuthDeclined">
                <source>auth pending</source>
                <target>auth declined</target>
                <event>update authorization status</event>
            </transition>

            <transition condition="Amazonpay/IsAuthSuspended">
                <source>auth pending</source>
                <target>auth suspended</target>
                <event>update authorization status</event>
            </transition>

            <transition condition="Amazonpay/IsAuthClosed">
                <source>auth pending</source>
                <target>auth closed</target>
                <event>update authorization status</event>
            </transition>

            <transition condition="Amazonpay/IsAuthClosed">
                <source>auth open</source>
                <target>auth closed</target>
                <event>capture</event>
            </transition>

            <transition condition="Amazonpay/IsCaptureCompleted" happy="true">
                <source>auth open</source>
                <target>capture completed</target>
                <event>capture</event>
            </transition>

            <!-- from auth_suspended -->
            <transition condition="Amazonpay/IsAuthPending">
                <source>auth suspended</source>
                <target>auth pending</target>
                <event>update suspended order</event>
            </transition>

            <!-- from capture_pending -->
            <transition condition="Amazonpay/IsCaptureCompleted" happy="true">
                <source>capture pending</source>
                <target>capture completed</target>
                <event>update capture status</event>
            </transition>

            <transition condition="Amazonpay/IsCaptureDeclined">
                <source>capture pending</source>
                <target>capture declined</target>
                <event>update capture status</event>
            </transition>

            <!-- capture -->
            <transition condition="Amazonpay/IsCapturePending" happy="true">
                <source>auth open</source>
                <target>capture pending</target>
                <event>capture</event>
            </transition>

            <transition condition="Amazonpay/IsCaptureCompleted" happy="true">
                <source>auth open</source>
                <target>capture completed</target>
                <event>capture</event>
            </transition>

            <transition condition="Amazonpay/IsCaptureDeclined">
                <source>auth open</source>
                <target>capture declined</target>
                <event>capture</event>
            </transition>

            <!-- from capture_completed to refund -->
            <transition condition="Amazonpay/IsRefundPending" happy="true">
                <source>capture completed</source>
                <target>refund pending</target>
                <event>refund</event>
            </transition>

            <transition condition="Amazonpay/IsRefundCompleted" happy="true">
                <source>capture completed</source>
                <target>refund completed</target>
                <event>refund</event>
            </transition>

            <transition condition="Amazonpay/IsRefundDeclined">
                <source>capture completed</source>
                <target>refund declined</target>
                <event>refund</event>
            </transition>

            <!-- from refund_pending -->
            <transition condition="Amazonpay/IsRefundCompleted" happy="true">
                <source>refund pending</source>
                <target>refund completed</target>
                <event>update refund status</event>
            </transition>

            <transition condition="Amazonpay/IsRefundDeclined">
                <source>refund pending</source>
                <target>refund declined</target>
                <event>update refund status</event>
            </transition>

            <!-- close -->
            <transition condition="Amazonpay/IsClosed" happy="true">
                <source>capture completed</source>
                <target>closed</target>
                <event>close</event>
            </transition>

            <transition condition="Amazonpay/IsClosed" happy="true">
                <source>refund completed</source>
                <target>closed</target>
                <event>close</event>
            </transition>

        </transitions>
    </process>

</statemachine>
