<?xml version="1.0"?>
<statemachine
        xmlns="spryker:oms-01"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="spryker:oms-01 http://static.spryker.com/oms-01.xsd">

    <process name="AmazonpayPayment01" main="true">
        <states>
            <state name="new" reserved="true"/>

            <state name="auth_pending" reserved="true"/>
            <state name="auth_open" reserved="true"/>
            <state name="auth_declined"/>

            <state name="capture_pending" reserved="true"/>
            <state name="capture_completed" reserved="true"/>
            <state name="capture_declined"/>

            <state name="refund_pending"/>
            <state name="refund_completed"/>
            <state name="refund_declined"/>

            <state name="closed" reserved="true"/>
        </states>

        <events>
            <event name="update_new_order_status" onEnter="true" command="Amazonpay/UpdateOrderStatus" />
            <event name="update_authorization_status" manual="true" command="Amazonpay/UpdateOrderStatus" />
            <event name="update_capture_status" manual="true" command="Amazonpay/UpdateOrderStatus" />
            <event name="update_refund_status" manual="true" command="Amazonpay/UpdateOrderStatus" />
            <event name="capture" manual="true" command="Amazonpay/Capture" />
            <event name="close" manual="true" command="Amazonpay/CloseOrder" />
            <event name="refund" manual="true" command="Amazonpay/RefundOrder" />
        </events>

        <transitions>
            <!-- from new -->
            <transition condition="Amazonpay/IsAuthPending" happy="true">
                <source>new</source>
                <target>auth_pending</target>
                <event>update_new_order_status</event>
            </transition>

            <transition condition="Amazonpay/IsAuthOpen" happy="true">
                <source>new</source>
                <target>auth_open</target>
                <event>update_new_order_status</event>
            </transition>

            <transition condition="Amazonpay/IsCaptureCompleted" happy="true">
                <source>new</source>
                <target>capture_completed</target>
                <event>update_new_order_status</event>
            </transition>

            <!-- from auth_pending (ipn) -->
            <transition condition="Amazonpay/IsAuthOpen" happy="true">
                <source>auth_pending</source>
                <target>auth_open</target>
                <event>update_authorization_status</event>
            </transition>

            <transition condition="Amazonpay/IsAuthDeclined">
                <source>auth_pending</source>
                <target>auth_declined</target>
                <event>update_authorization_status</event>
            </transition>

            <!-- from capture_pending -->
            <transition condition="Amazonpay/IsCaptureCompleted" happy="true">
                <source>capture_pending</source>
                <target>capture_completed</target>
                <event>update_capture_status</event>
            </transition>

            <transition condition="Amazonpay/IsCaptureDeclined">
                <source>capture_pending</source>
                <target>capture_declined</target>
                <event>update_capture_status</event>
            </transition>

            <!-- capture -->
            <transition condition="Amazonpay/IsCapturePending" happy="true">
                <source>auth_open</source>
                <target>capture_pending</target>
                <event>capture</event>
            </transition>

            <transition condition="Amazonpay/IsCaptureCompleted" happy="true">
                <source>auth_open</source>
                <target>capture_completed</target>
                <event>capture</event>
            </transition>

            <transition condition="Amazonpay/IsCaptureDeclined" happy="true">
                <source>auth_open</source>
                <target>capture_declined</target>
                <event>capture</event>
            </transition>

            <!-- from capture_completed to refund -->
            <transition condition="Amazonpay/IsRefundPending" happy="true">
                <source>capture_completed</source>
                <target>refund_pending</target>
                <event>refund</event>
            </transition>

            <transition condition="Amazonpay/IsRefundCompleted" happy="true">
                <source>capture_completed</source>
                <target>refund_completed</target>
                <event>refund</event>
            </transition>

            <transition condition="Amazonpay/IsRefundDeclined">
                <source>capture_completed</source>
                <target>refund_declined</target>
                <event>refund</event>
            </transition>

            <!-- from refund_pending -->
            <transition condition="Amazonpay/IsRefundCompleted" happy="true">
                <source>refund_pending</source>
                <target>refund_completed</target>
                <event>update_refund_status</event>
            </transition>

            <transition condition="Amazonpay/IsRefundDeclined">
                <source>refund_pending</source>
                <target>refund_declined</target>
                <event>update_refund_status</event>
            </transition>

            <!-- close -->
            <transition condition="Amazonpay/IsClosed" happy="true">
                <source>capture_completed</source>
                <target>closed</target>
                <event>close</event>
            </transition>

            <transition condition="Amazonpay/IsClosed" happy="true">
                <source>refund_completed</source>
                <target>closed</target>
                <event>close</event>
            </transition>

        </transitions>
    </process>

</statemachine>
