<?xml version="1.0"?>
<statemachine
        xmlns="spryker:oms-01"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="spryker:oms-01 http://static.spryker.com/oms-01.xsd">

    <process name="AmazonpayPayment01" main="true">
        <states>
            <state name="new" reserved="true"/>
            <state name="authorized" reserved="true"/>
            <state name="declined"/>
            <state name="captured" reserved="true"/>
            <state name="cancelled" />
            <state name="closed" reserved="true"/>
        </states>

        <events>
            <event name="authorize" manual="true" command="Amazonpay/Authorize" />
            <event name="capture" manual="true" command="Amazonpay/Capture" />
            <event name="cancel" manual="true" command="Amazonpay/Cancel" />
            <event name="close" manual="true" />
        </events>

        <transitions>
            <transition condition="Amazonpay/IsAuthorized" happy="true">
                <source>new</source>
                <target>authorized</target>
                <event>authorize</event>
            </transition>

            <transition>
                <source>new</source>
                <target>declined</target>
                <event>authorize</event>
            </transition>

            <transition condition="Amazonpay/IsCaptured" happy="true">
                <source>authorized</source>
                <target>captured</target>
                <event>capture</event>
            </transition>

            <transition>
                <source>authorized</source>
                <target>cancelled</target>
                <event>cancel</event>
            </transition>

            <transition condition="Amazonpay/IsCancelled">
                <source>captured</source>
                <target>cancelled</target>
                <event>cancel</event>
            </transition>

            <transition happy="true" manual="true">
                <source>captured</source>
                <target>closed</target>
                <event>close</event>
            </transition>
        </transitions>
    </process>

</statemachine>
